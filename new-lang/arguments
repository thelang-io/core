export obj Arguments {
  fileName: str
}

export fn Arguments_init () Arguments {
  if process.args.len == 1 {
    throw NewError("REPL is not supported")
  }

  mut fileName: str?

  loop i := 1; i < process.args.len; i++ {
    arg := process.args[i]

    if arg[0] == '-' {
      throw NewError("Bad option " + arg)
    } elif fileName == nil {
      fileName = arg
    } else {
      throw NewError("Processing multiple files is not supported")
    }
  }

  if fileName == nil {
    throw NewError("File is not specified")
  }

  return Arguments{fileName: fileName}
}
