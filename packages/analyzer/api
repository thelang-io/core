obj builtin_DIR {
}

obj builtin_dirent {
  ino: u64
  name: str
}

fn alphasort (a: ref ref builtin_dirent, b: ref ref builtin_dirent) int
fn closedir (handle: ref builtin_DIR) int
fn dirfd (handle: ref builtin_DIR) int
fn fdopendir (fd: int) ref builtin_DIR
fn opendir (dir: str) ref builtin_DIR
fn readdir (handle: ref builtin_DIR) ref builtin_dirent
fn rewinddir (handle: ref builtin_DIR) void
fn scandir (
  dir: str,
  namelist: ref (ref builtin_dirent)[],
  filter: (a: ref builtin_dirent) -> int,
  comparator: (a: ref ref builtin_dirent, b: ref ref builtin_dirent) -> int
) int
fn seekdir (handle: ref builtin_DIR, location: i64) void
fn telldir (handle: ref builtin_DIR) i64

