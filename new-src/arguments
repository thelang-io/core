obj Arguments {
  fileName: str
}

fn Arguments_init (args: str[]) Arguments {
  if args.len == 1 {
    RaiseError("REPL is not supported")
  }

  mut fileName: str

  loop i := 1; i < args.len; i++ {
    arg := args[i]

    if arg[0] == '-' {
      RaiseError("Bad option " + arg)
    } elif fileName.len == 0 {
      fileName = arg
    } else {
      RaiseError("Processing multiple files is not supported")
    }
  }

  if fileName.len == 0 {
    RaiseError("File is not specified")
  }

  return Arguments{fileName: fileName}
}
